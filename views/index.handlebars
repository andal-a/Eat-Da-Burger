<div class="container-fluid">
	<div class="jumbotron">
        <img align="center" id="burgerImg" src="/assets/img/chzbrgr.png" alt="hamburger" class="mx-auto d-block">
		<h1 ="title">Eat-Da-Burger</h1>
        <p>Welcome to Eat-Da-Burger, home of the Eat-Da-Burger, Can I take your order?</p>

	</div>
	<div class="row">
        <div class="col-lg-5">
            <div class="panel-panel default">
                <h2>Hot and Ready to Devour</h2>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li class="list-group-item">
                        <div class="input-group">
                            <p class="lead">{{burger_name}}</p>
                            <span class="input-group-btn">
                                <!--Burgers from the database populate here-->
                                <button class="devourBtn btn btn-default btn-lg" data-id="{{id}}" id="devourBtn">Devour it!</button>
                            </span>
                        </div>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
		<div class="col-lg-5 col-md-offset-2">
            <div class="panel panel-default"></div>
                <h2>Devoured Burgers</h2>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if devoured}}
                    <li class="list-group-item">
                        <p class="lead">{{burger_name}}</p>
                        <button class="deleteBtn btn btn-danger btn-lg float-right" data-id="{{id}}">DELETE</button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
		    </div>
        </div>
        <!--Submit form for adding new burgers to the db-->
        <div class="row mt-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-8">
            <h3 align="center">Add a Burger</h3>
            <form class="create-form">
                <div class="form-group mx-auto" align="center">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Burger name" aria-label="Recipient's username" aria-describedby="basic-addon2" id="burgerName">
                        <div class="input-group-append">
                            <button class="btn btn-dark" type="submit">ADD</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-sm-2">
        </div>
    </div>
    </div>
    <!-- Footer -->
    <footer>
        <div class="container-fluid" id="footer">
            &copy; Cooked Medium Rare by Amor Andal
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery.js"></script>
</div>
</div>