<div class="container-fluid">
	<div class="jumbotron">
        <img align="center" id="burgerImg" src="/assets/img/chzbrgr.png" alt="hamburger" class="mx-auto d-block">
		<h1 ="title">Eat-Da-Burger</h1>
        <p>Welcome to Eat-Da-Burger, home of the Eat-Da-Burger, Can I take your order?</p>

	</div>
	<div class="row">
        <div class="col-lg-5">
            <div class="panel-panel default">
                <h2>Hot and Ready to Devour</h2>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li class="list-group-item">
                    <div class="input-group">
                        <p class="lead">{{this.burger_name}}</p>
                        <span class="input-group-btn">
                            <!--Burgers from the database populate here-->
                            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button class="btn btn-default btn-lg" data-id="{{id}}" id="devourBtn">Devour it!</button>
                            </form>
                        </span>
                    </div>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
		<div class="col-lg-5 col-md-offset-2">
            <div class="panel panel-default"></div>
                <h2>Devoured Burgers</h2>
                <ul class="list-group">
                    {{#each burgers}}
                    {{#if this.devoured}}
                    <li class="list-group-item">
                        <p class="lead">{{this.burger_name}}</p>
                        <button class="deleteBtn btn btn-danger btn-lg float-right" data-id="{{id}}">DELETE</button>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>
		    </div>
        </div>
        <!--Submit form for adding new burgers to the db-->
        <div class="col-md-10 col-md-offset-1">
            <p class="textbox">Add burger & click submit</p>
            <form class="create-update-form" action="burgers/create" method="POST">
            <div class="form-group">
                <textarea class="form-control input-lg" type="text" name="burger_name" row="3"></textarea>
            </div>
            <button class="btn btn-default btn-lg" type="submit">Submit</button>
            </form>
        </div>
    </div>
    <!-- Footer -->
    <footer>
        <div class="container-fluid" id="footer">
            &copy; Cooked Medium Rare by Amor Andal
        </div>
    </footer>
    <script src="https://code.jquery.com/jquery.js"></script>
</div>
</div>